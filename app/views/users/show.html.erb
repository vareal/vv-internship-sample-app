<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.gravatar_url, class: "avt" %> <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <aside class="col-md-8">
    <%= render "shared/follow_form" if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render partial: "micropost", collection: @microposts %>
      </ol>
      <%= paginate @microposts, theme: "twitter-bootstrap-4" %>
    <% end %>
  </aside>
  <aside class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render partial: "micropost", collection: @microposts %>
      </ol>
      <%= paginate @microposts, theme: "twitter-bootstrap-4" %>
    <% end %>
  </aside>
</div>
