<header class="navbar bg-dark container-fluid navbar-light">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo", class: "navbar-brand" %>
    <nav>
      <ul class="nav">
        <li class="nav-item">
          <%= link_to "Home", "#", class: "nav-link" %></li>
        <li class="nav-item">
          <%= link_to "Help", "#", class: "nav-link" %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Profile", user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Settings", edit_user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", logout_path, class: "nav-link", method: :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", login_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
